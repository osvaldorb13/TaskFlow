# EditorConfig: https://editorconfig.org

root = true

# Configuracion por defecto para todos los archivos
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown: no quitar trailing whitespace (se usa para line breaks)
[*.md]
trim_trailing_whitespace = false

# Python: indentacion de 4 espacios (PEP 8)
[*.py]
indent_size = 4

# Makefiles: requieren tabs
[Makefile]
indent_style = tab